{% set selected = 'courses' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-sitemap{% endblock %}
{% block title %}Courses{% endblock %}
{% block head_title %}Courses{% endblock %}


{% block title_menu %}
	<span class="title_menu_item"><a href="{{ site_url('courses/add') }}"><i class="fa fa-plus color11"></i> Add </a></span>
{% endblock %}


{% block main_content %}
{% if deleted_user %}
	<p class="shj_ok">User deleted successfully.</p>
{% endif %}
{% if deleted_submissions %}
	<p class="shj_ok">Submissions of selected user deleted successfully.</p>
{% endif %}
{% if deleted_course %}
	<p class="shj_ok">Course deleted successfully.</p>
{% endif %}
<div style="height:15px"></div>
<table class="sharif_table">
	<thead>
		<tr>
			<th>#</th>
			<th>Course ID</th>
			<th>Course Name</th>
			<th>Registration Code</th>
			<th>Actions</th>
		</tr>
	</thead>
	{% for course in courses %}
		<tr data-id="{{ course.id }}">
			<td>{{ loop.index }}</td>
			<td>{{ course.id }}</td>
			<td id="un">{{ course.name }}</td>
			<td>{{ course.registration_code }}</td>
			<td>
				<span title="Delete Course" class="pointer"><i title="Delete Course" class="fa fa-times fa-lg color2"></i></span>
			</td>
		</tr>
	{% endfor %}
</table>
{% endblock %}  {# main_content #}
